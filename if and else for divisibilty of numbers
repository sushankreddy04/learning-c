/*divisibility of number by 2*/
#include<stdio.h>
int main()
{
    int a;
    printf("enter the value of a:");
    scanf("%d",&a);
    if(a%2==0)
    {
        printf("the number is divisible by 2");
    }
        if(a%2!=0)
    {
        printf("the number is not divisible by2");
    }
    return 0;
}
