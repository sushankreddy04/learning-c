/*checking wheater the number is armstrong number or not*/
#include<stdio.h>
int main()
{
    int i,num,r,sum=0;//declaration part//
    printf("enter a number:");
    scanf("%d",&num);
    for(i=num;num!=0;num=num/10)//looping of number//
    {
        r=num%10;
        sum=sum+(r*r*r);
    }
    if(sum==i)//using if and else statements //
    {
        printf("it is an armstrong number");
    }
    else{
            printf("it is not an armstrong number");
    }
    return 0;
}
